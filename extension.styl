body, h1, h2, h3, h4, h5, h6, p
	font-family "Roboto",sans-serif !important
body
	font-size 11pt
#_app
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	display flex
	box-sizing border-box
	z-index 2000
	pointer-events none
	*
		box-sizing border-box
._sideLeft
._sideCenter
._sideRight
	position relative
	pointer-events none
	> *
		pointer-events auto
._sideLeft
._sideRight
	width 20%
	background #f8f9fa
._button
	padding 4px 8px
	border 0
	border-radius 8px
	font inherit
	background #07d
	color #fff
	outline 0
._input
	padding 4px 8px
	border 0
	border-radius 8px
	font inherit
	background #f0f1f2
	outline 0
	&:focus
		box-shadow 0 0 0 2px #07d
		z-index 1
._notifies
	display flex
	flex-direction column
	align-items center
	pointer-events none
._notify
	margin-top 4px
	padding 4px 8px
	border-radius 8px
	display inline-flex
	align-items center
	background #112
	color #fff
	animation _fadeIn5 .1s forwards
	z-index 2050
._modals
	pointer-events none
._modal
	position absolute
	top 6%
	width fit-content
	max-height 80%
	border-radius 8px
	background #fff
	box-shadow 0 2px 4px #888c,0 8px 16px 4px #8883
	transition margin-top .1s
	animation _fadeIn95 .1s forwards
	pointer-events auto
	z-index 2030
._modalClose
	width 24px
	height 24px
	border 0
	border-radius 6px
	display flex
	justify-content center
	align-items center
	background #0000
	outline 0
	&:hover
		background #f43
		color #fff
	&:active
		background #c43
		color #fff
._mark
	position fixed
	pointer-events none
	z-index 2060
@keyframes _fadeIn5
	from
		transform scale(.5)
		opacity 0
	to
		transform scale(1)
		opacity 1
@keyframes _fadeIn95
	from
		transform scale(.95)
		opacity 0
	to
		transform scale(1)
		opacity 1
@keyframes _fadeOut95
	from
		transform scale(1)
		opacity 1
	to
		transform scale(.95)
		opacity 0
._fadeOut95
	animation _fadeOut95 .1s forwards
